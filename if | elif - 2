#f)
x = int(input("Enter number"))
if 1 <= x <= 10:
    print("Is in compartment")
else:
    print("Is not in compartment")
    if 17 <= x <= 21:
        print("Is in compartment")
    else:
        print("does not belong to compartments[1,10] | [17,21]")
#g)
y = int(input("Enter number"))
if y % 3 == 0 and y % 5 == 0:
    print("podzielna przez 3 i 5")
elif y % 3 == 0:
    print("podzielna przez 3 ale nie przez 5")
elif y % 5 == 0:
    print("podzielna przez 5 ale nie przez 3")
elif y % 5 == 0:
    print("liczba nie jest podzielna ani przez 3 ani przez 5")
