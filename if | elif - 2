print(pierwsza1 * druga2)
print(pierwsza1 / druga2)
#i)
temp = float(input("Temperature"))
jednostka = input("F | C ")
if jednostka == "C":
    temperatura_przeksztalcona = (temp * 9/5) + 32
    print(f"{temp}C to {temperatura_przeksztalcona}F")
elif jednostka == "F":
    temperatura_przeksztalcona = (temp - 32) * 5/9
    print(f"{temp}F to {temperatura_przeksztalcona} C")
else:
    print("NieprawidÅ‚owa jednostka")
#j)
fir = int(input("First num"))
sec = int(input("Second num"))
thi = int(input("Third num"))
if fir**2 + sec**2 == thi**2 or fir**2 + thi**2 == sec**2 or sec**2 + thi**2 == fir**2:
    print("Jest to trojka")
else:
    print("nie jest to trojka")



